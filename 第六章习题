14.
#define SIZE 8

double d1[8];
double d2[8];
double sum = 0;
int i;

for(i = 0;i<SIZE;i++) {
	scanf("%lf", &d1[i]);
	sum += d1[i];
	d2[i] = sum;
}

for(i = 0;i < SIZE;i++) {
	printf("%lf ", d1[i]);
}
printf("\n");
for(i = 0;i < SIZE;i++) {
	printf("%lf ", d2[i]);
}

15.
char c[255];
int i = 0;
while( scanf("%c", &c[i]) ==1 && c[i] != '\n' && i <= 255 ) {
	i++;
}

for(int j = i - 1;j >= 0;j--){
	printf("%c", c[j]);
}

16.
int year = 0;
double s = 100,sum_1 = s,sum_2 = s;
while(++year) {
	sum_1 += s*0.1*year;
	sum_2 += sum_2*0.05;

	if(sum_2 > sum_1) {
		printf("%lf %lf\n", sum_1, sum_2);
		break;
	}
}

printf("%d", year);

17.
const double RATE = 0.08;
int year = 1;
double sum = 100;

while(sum += sum * RATE - 10 > 0) {
	year++;
}

printf("%d", year);

18.
const int DUNBAR = 150;
int week = 1, sum = 5;

while((sum = (sum - week) * 2) <= DUNBAR){
	week++;
} 
printf("%d", week);




























































