练习题
1.
const int SIZE = 26;
char _char[26];

for(int i = 0;i < SIZE;i++) {
	_char[i] = 'a' + i;
}

for(i = 0;i < SIZE;i++) {
	printf("%c ", _char[i]);
}

2.
for(int i = 1;i <= 5;i++){
	for(int j = 0;j < i;j++) {
		printf("$");
	}
	printf("\n");
}

3.
for(int i = 1;i <= 6;i++) {
	for(int j = 0;j < i;j++) {
		printf("%c", 'F' - j);
	}
	printf("\n");
}

4.
char ch = 'A' - 1;
for(int i = 1;i <= 6;i++) {
	for(int j = 0;j < i;j++) {
		printf("%c", ch+=1);
	}
	printf("\n");
}

5.
char ch;
scanf("%c", &ch);
for(char i = 'A'; i <= ch;i++) {
	for(char j = ch;j > i;j--) {
		printf(" ");
	}

	for(char k = 'A';k < i;k++) {
		printf("%c", k);
	}

	for(char l = i;l >= 'A';l--) {
		printf("%c", l);
	}
}

6
int max,min;
scanf("%d %d",&min ,&max);
for(;min <= max;min++) {
	printf("%d %d %d\n", min, min*min, min*min*min);
}

7.
