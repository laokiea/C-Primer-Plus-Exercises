12
#define定义的常量命名规则和定义变量一样，不能以特殊字符开头



编程练习
1.
char fname[20],lname[20];
scanf("%s %s", fname, lname);
printf("%s,%s", fname, lname);

2.
#include<string.h>

char fname[20],lname[20];
scanf("%s %s", fname, lname);
printf("\"%*s,%s\"", strlen(fname)+3, fname, lname);

6
#include<string.h>

char fname[20], lname[20];
scanf("%s %s", fname, lname);
printf("%s %s", fname, lname);
printf("%-*d %-*d", strlen(fname), strlen(fname), strlen(lname), strlen(lname));

